<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CustomButton">
        <attr name="text_color" format="color" />
        <attr name="background_drawable" format="reference"/>
        <attr name="text_size" format="dimension" />
        <attr name="text_value" format="string" />
        <attr name="verticalPadding" format="dimension" />
        <attr name="horizontalPadding" format="dimension"/>
        <attr name="is_rounded" format="boolean" />
        <attr name="background_color" format="color" />
    </declare-styleable>

    <declare-styleable name="WebImageLoader">
        <attr name="default_image" format="reference" />
        <attr name="error_image" format="reference" />
        <attr name="adjustViewBounds" format="boolean"/>
        <attr name="fill_width" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="DatePicker">
        <attr name="show_date" format="boolean" />
        <attr name="show_hour" format="boolean" />
    </declare-styleable>

    <declare-styleable name="FontFitTextView">
        <attr name="max_size" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="Divider">
        <attr name="text" format="string"/>
    </declare-styleable>
</resources>